{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "target": "es2024", 
    "module": "nodenext", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, 
    "declaration": false, 
    "removeComments": true, 
    "noEmit" : true,
    "allowImportingTsExtensions": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}